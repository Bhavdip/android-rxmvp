<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/card_background"
    android:elevation="1dp"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:id="@+id/comment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:textSize="14sp"
        tools:text="post description" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/comment_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="twistedequations" />

        <TextView
            android:id="@+id/comment_points_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_upvote"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_upvote"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="14sp"
            tools:text="20" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:src="@drawable/ic_down_vote"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>